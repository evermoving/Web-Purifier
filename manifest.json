{
  "manifest_version": 2,
  "name": "Web Purifier",
  "version": "1.0",
  "description": "Hide page elements containing specified keywords",
  "icons": {
    "48": "icons/webpurifier_48.png",
    "96": "icons/webpurifier_96.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icons/webpurifier_48.png",
    "default_title": "Web Purifier",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}