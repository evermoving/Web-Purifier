{
  "manifest_version": 2,
  "name": "PagePurifier",
  "version": "1.0",
  "description": "Hide page elements containing specified keywords",
  "icons": {
    "48": "icons/pagepurifier_48.png",
    "96": "icons/pagepurifier_96.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icons/pagepurifier_48.png",
    "default_title": "PagePurifier",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"]
  }
}