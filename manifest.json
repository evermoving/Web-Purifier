{
  "manifest_version": 2,
  "name": "Web Purifier",
  "version": "1.0",
  "description": "Hide page elements containing specified keywords",
  "icons": {
    "16": "icons/webpurifier_16.png",
    "32": "icons/webpurifier_32.png",
    "48": "icons/webpurifier_48.png",
    "64": "icons/webpurifier_96.png",
    "96": "icons/webpurifier_96.png",
    "128": "icons/webpurifier_96.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icons/webpurifier_48.png",
    "default_title": "Web Purifier",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "webpurifier@example.com"
    }
  }
}